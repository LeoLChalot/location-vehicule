{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="block">
    <h1 class=" is-size-1 has-text-centered">Clients</h1>
</div>

<div class="columns">
    <div class="column"></div>
    <div class="column is-half">

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                
                <tr>
                    <th>Pseudo</th>
                    <td>{{ user.pseudo }}</td>
                </tr>
                <tr>
                    <th>Avatar</th>
                    <td>{{ user.avatar }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_user_index') }}">Retour</a>

        <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
    <div class="column"></div>
</div>
{% endblock %}