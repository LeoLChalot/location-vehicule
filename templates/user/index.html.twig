{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="block">
    <h1 class=" is-size-1 has-text-centered">Liste des clients</h1>
</div>

<div class="columns">
    <div class="column"></div>
    <div class="column is-half">
        <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Pseudo</th>
                    <th>Avatar</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.avatar }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}">Editer</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="7">Aucun enregistrement en base de donn√©es</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_user_new') }}">Ajout</a>
    </div>
    <div class="column"></div>
</div>
{% endblock %}