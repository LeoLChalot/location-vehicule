{% extends 'base.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
<div class="block">
    <h1 class=" is-size-1 has-text-centered">Commentaire</h1>
</div>

<div class="columns">
    <div class="column"></div>
    <div class="column is-half">
        <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ commentaire.id }}</td>
                </tr>
                <tr>
                    <th>Texte</th>
                    <td>{{ commentaire.texte }}</td>
                </tr>
                <tr>
                    <th>Note</th>
                    <td>{{ commentaire.note }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_commentaire_index') }}">Retour</a>

        <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">Modifier</a>

        {{ include('commentaire/_delete_form.html.twig') }}
    </div>
    <div class="column"></div>
</div>
{% endblock %}