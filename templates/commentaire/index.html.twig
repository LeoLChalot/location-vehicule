{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
<div class="block">
    <h1 class=" is-size-1 has-text-centered">Liste des commentaires</h1>
</div>

<div class="columns">
    <div class="column"></div>
    <div class="column is-half">
        <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
        <thead>
            <tr>
                <th>Id</th>
                <th>Texte</th>
                <th>Note</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.texte }}</td>
                <td>{{ commentaire.note }}</td>
                <td>
                    <a href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}">Voir</a>
                    <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_new') }}">Ajout</a>
    </div>
    <div class="column"></div>
</div>
{% endblock %}
