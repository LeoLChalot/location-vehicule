<div class="columns">
    <div class="column"></div>
    <div class="column is-third">
        {{ form_start(form, {'attr': {'class' : 'box'},'enctype': 'multipart/form-data'}) }}
        <div class="block">
            <div class="field">
                {{ form_label(form.marque) }}
                {{ form_widget(form.marque) }}
            </div>
        </div>
        <div class="block">
            <div class="field">
                {{ form_label(form.reference) }}
                {{ form_widget(form.reference) }}
            </div>
        </div>
        <div class="block">
            <div class="select is-rounded">
                {{ form_widget(form.couleur) }}
            </div>
        </div>
        <div class="block">
            <div class="field">
                {{ form_widget(form.description) }}
            </div>
        </div>
        <div class="block">
            <div class="field">
                {{ form_label(form.immatriculation) }}
                {{ form_widget(form.immatriculation) }}
            </div>
        </div>
        <div class="block">
            <div class="field">
                {{ form_label(form.prix_journalier) }}
                {{ form_widget(form.prix_journalier) }}
            </div>
        </div>
        <div class="block">
            <div class="select is-rounded">
                {{ form_widget(form.status_disponibilite) }}
            </div>
        </div>
        <div class="file is-normal has-name">
            {{ form_widget(form.imageFile) }}
            <span class="file-cta">
                <span class="file-icon">
                    <i class="fas fa-upload"></i>
                </span>
                <span class="file-label">Photo</span>
            </span>
            </label>
        </div>
        <div class="block">
            <button class="button is-primary">{{ button_label|default('Ajouter') }}</button>
        </div>

        {{ form_end(form) }}
    </div>
    <div class="column"></div>
</div>