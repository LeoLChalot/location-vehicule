<div class="columns">
    <div class="column">
        <div class="column">
            {{ form_start(form, {'attr': {'class' : 'box'} })}}
            <div class="block">
                <div class="field">
                    {{ form_label(form.date_debut) }}
                    {{ form_widget(form.date_debut) }}
                </div>
            </div>
            <div class="block">
                <div class="field">
                    {{ form_label(form.date_fin) }}
                    {{ form_widget(form.date_fin) }}
                </div>
            </div>
            <div class="block">
                {% if not is_granted('ROLE_ADMIN') %}
                    <div class="select is-rounded is-hidden">
                {% else %}
                    <div class="select is-rounded">
                {% endif %}
                        {{ form_widget(form.vehicule)}}
                    </div>
             
            </div>
            <div class="block">
                {% if not is_granted('ROLE_ADMIN') %}
                    <div class="select is-rounded is-hidden">
                {% else %}
                    <div class="select is-rounded">
                {% endif %}
                        {{ form_widget(form.client)}}
                    </div>
            </div>
            <div class="block">
                <button class="button is-primary mx-auto">{{ button_label|default('Valider') }}</button>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="column"></div>
    </div>